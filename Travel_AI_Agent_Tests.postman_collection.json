{
    "info": {
        "name": "Travel AI Agent - Complete Test Suite",
        "description": "Test all features: Create itinerary, Modify, Confirm, Session management",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000/api/v1"
        },
        {
            "key": "ai_agent_url",
            "value": "http://localhost:8001"
        },
        {
            "key": "jwt_token",
            "value": "",
            "type": "string"
        },
        {
            "key": "session_id",
            "value": "test_session_{{$timestamp}}",
            "type": "string"
        },
        {
            "key": "itinerary_id",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "0. Setup - Get JWT Token",
            "item": [
                {
                    "name": "Register User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"full_name\": \"Test User\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/register",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "register"
                            ]
                        }
                    }
                },
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "// Save JWT token to environment",
                                    "var jsonData = pm.response.json();",
                                    "pm.collectionVariables.set(\"jwt_token\", jsonData.access_token);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "1. Create Itinerary Flow",
            "item": [
                {
                    "name": "1.1 Start - Provide duration & group",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"message\": \"Tôi muốn đi du lịch 3 ngày 2 đêm, cùng bạn bè 3 người\",\n  \"sessionId\": \"{{session_id}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/ai/chat",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "ai",
                                "chat"
                            ]
                        }
                    }
                },
                {
                    "name": "1.2 Provide destination",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"message\": \"Đà Lạt\",\n  \"sessionId\": \"{{session_id}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/ai/chat",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "ai",
                                "chat"
                            ]
                        }
                    }
                },
                {
                    "name": "1.3 Confirm - Create itinerary",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "// Save itinerary_id for later tests",
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.itineraryId) {",
                                    "    pm.collectionVariables.set(\"itinerary_id\", jsonData.itineraryId);",
                                    "    console.log(\"Saved itinerary_id: \" + jsonData.itineraryId);",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"message\": \"Muốn\",\n  \"sessionId\": \"{{session_id}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/ai/chat",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "ai",
                                "chat"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "2. Modify Itinerary",
            "item": [
                {
                    "name": "2.1 Remove a place",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"message\": \"Bỏ Hồ Xuân Hương\",\n  \"sessionId\": \"{{session_id}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/ai/chat",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "ai",
                                "chat"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "3. Confirm Itinerary",
            "item": [
                {
                    "name": "3.1 Confirm (DRAFT → CONFIRMED)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/ai/itineraries/{{itinerary_id}}/confirm",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "ai",
                                "itineraries",
                                "{{itinerary_id}}",
                                "confirm"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "4. Get Itineraries",
            "item": [
                {
                    "name": "4.1 Get all itineraries",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/ai/itineraries",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "ai",
                                "itineraries"
                            ]
                        }
                    }
                },
                {
                    "name": "4.2 Get specific itinerary",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/ai/itineraries/{{itinerary_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "ai",
                                "itineraries",
                                "{{itinerary_id}}"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "5. Travel Questions",
            "item": [
                {
                    "name": "5.1 Ask travel question",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"message\": \"Đà Lạt có gì đẹp?\",\n  \"sessionId\": \"question_session_001\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/ai/chat",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "ai",
                                "chat"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "6. Session Management",
            "item": [
                {
                    "name": "6.1 Reset conversation",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"sessionId\": \"{{session_id}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/ai/reset",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "ai",
                                "reset"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "7. Health Checks",
            "item": [
                {
                    "name": "7.1 Backend health",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/ai/health",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "ai",
                                "health"
                            ]
                        }
                    }
                },
                {
                    "name": "7.2 AI Agent health",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{ai_agent_url}}/health",
                            "host": [
                                "{{ai_agent_url}}"
                            ],
                            "path": [
                                "health"
                            ]
                        }
                    }
                }
            ]
        }
    ]
}